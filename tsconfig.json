{
  "compilerOptions": {
    "declaration": true,           
    "declarationMap": true,       
    "emitDeclarationOnly": false,
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
